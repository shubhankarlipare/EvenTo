@model IEnumerable<EventModel>

@{
    ViewData["Title"] = "AllEvents";
}

<h1 class="h-100">All Events</h1>

<div class="row row-cols-1 row-cols-md-2 g-4">


    @foreach (var _event in Model)
    {
    <div class="col">
        <div class="card">
            <img src="@_event.ImagePath" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">@_event.EventName</h5>
                <p class="card-text">@_event.EventDescritption</p>
                <p class="card-text"><small class="text-muted">@_event.EventLocation</small></p>
            </div>
            <a asp-controller="Event" asp-action="viewEvent" asp-route-id="@_event.EventId" class="btn btn-primary">View More</a>
        </div>
    </div>
            }
        
    </div>