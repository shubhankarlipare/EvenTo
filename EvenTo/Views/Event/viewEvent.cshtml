@model EventModel

@{
    ViewData["Title"] = "viewEvent";
}

<h1>@Model.EventName</h1>

<div class="card mb-3" style="max-width: 540px;">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="@Model.ImagePath" class="img-fluid rounded-start" alt="...">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">@Model.EventName</h5>
                <p class="card-text">@Model.EventDescritption</p>
                <h6 class="card-text">@Model.EventLocation</h6>
                <p class="card-text"><small class="text-muted">@Model.EventRate</small></p>
            </div>
        </div>
    </div>
</div>
